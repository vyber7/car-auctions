generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  listingsCommentedOnIds String[]  @db.ObjectId
  listingsCommentedOn    Listing[] @relation(name: "commentedOn", fields: [listingsCommentedOnIds], references: [id])

  // seenCommentIds String[]  @db.ObjectId
  // seenComments   Comment[] @relation(name: "seen", fields: [seenCommentIds], references: [id])

  accounts Account[]
  comments Comment[]

  uploadList Listing[] @relation(name: "uploaded")

  watchListIds String[]  @db.ObjectId
  watchList    Listing[] @relation(name: "watchlist", fields: [watchListIds], references: [id])

  BidOnListIds String[]  @db.ObjectId
  bidOnList    Listing[] @relation(fields: [BidOnListIds], references: [id])

  seenListIds String[]  @db.ObjectId
  seenList    Listing[] @relation(name: "seen", fields: [seenListIds], references: [id])

  highestBidsIds String[]  @db.ObjectId
  highestBids    Listing[] @relation(name: "highestBidder")

  bids Bid[]
}

model Listing {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  year          Int
  make          String
  model         String
  miles         Int
  images        String[]
  location      String
  description   String
  reservePrice  Int?
  createdAt     DateTime  @default(now())
  lastCommentAt DateTime? @default(now())
  updatedAt     DateTime? @updatedAt
  views         Int       @default(1)
  coverImage    String?

  auctionStartsAt DateTime?
  auctionEndsAt   DateTime?

  status String  @default("UPCOMING") // UPCOMING, LIVE, ENDED
  result String? // SOLD, RESERVE_NOT_MET

  isFeatured Boolean @default(false)

  startingBid  Int?
  currentBid   Int?
  bidIncrement Int?

  biddersIds String[] @db.ObjectId
  bidders    User[]   @relation(fields: [biddersIds], references: [id])

  highestBidderId String? @db.ObjectId
  highestBidder   User?   @relation(name: "highestBidder", fields: [highestBidderId], references: [id], onDelete: Cascade)

  seenIds String[] @db.ObjectId
  seen    User[]   @relation(name: "seen", fields: [seenIds], references: [id])

  userId String @db.ObjectId
  user   User   @relation(name: "uploaded", fields: [userId], references: [id], onDelete: Cascade)

  watchersIds String[] @db.ObjectId
  watchers    User[]   @relation(name: "watchlist", fields: [watchersIds], references: [id])

  commentsIds String[]  @db.ObjectId
  comments    Comment[]

  commenterIds String[] @db.ObjectId
  commenters   User[]   @relation(name: "commentedOn", fields: [commenterIds], references: [id])

  bids Bid[]
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  body      String?
  image     String?
  createdAt DateTime @default(now())

  // seenIds String[] @db.ObjectId
  // seen    User[]   @relation(name: "seen", fields: [seenIds], references: [id])

  listingId String  @db.ObjectId
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  userId String? @db.ObjectId
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Bid {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Int
  createdAt DateTime @default(now())

  listingId String  @db.ObjectId
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

